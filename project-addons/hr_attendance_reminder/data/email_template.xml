<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!--Email template -->
        <record id="email_template_attendance_reminder" model="email.template">
            <field name="name">Attendance reminder</field>
            <field name="email_from">${object.company_id.email|safe}</field>
            <field name="subject">Attendance Reminder</field>
            <field name="partner_to">${object.user_id.partner_id.id}</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.user_id.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<p>Dear ${object.name},</p>
<p>This is reminder that you didn't sign in/out today.</p>
<p>Thank you,</p>
]]></field>
        </record>

    </data>
</openerp>
